<Window x:Class="capyBIM.Views.VPLineLen"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:capyBIM.Views"
        mc:Ignorable="d"
        Title="VPLineLen"
        SizeToContent="Height"
        Height="Auto" Width="300" MinHeight="400" MaxHeight="600"
        WindowStartupLocation="CenterScreen">
    
    
    <Window.Resources>
        <Style TargetType="TextBlock">
            <Setter Property="FontFamily" Value="Century Gothic"/>
        </Style>

        <Style TargetType="ComboBox">
            <Setter Property="FontFamily" Value="Century Gothic"/>
        </Style>
    </Window.Resources>

    <StackPanel Margin="10">

        <!-- Card-like Box -->
        <Border BorderBrush="Gray" BorderThickness="1" CornerRadius="5" Padding="10" Margin="0,0,0,0">
            <StackPanel>
                <TextBlock Text="VP LineLength Config" FontSize="14" FontWeight="Bold" Margin="0,0,0,10"/>
                <TextBlock TextWrapping="WrapWithOverflow"><Run Text="Select your Font, Size and Correction "/><Run Text="Factor. "/><LineBreak/><Run/><LineBreak/><Run Text="This will be influenced by your Vie"/><Run Language="en-au" Text="w"/><Run Text="port Title Annotation Symbol"/><Run Language="en-au" Text="."/></TextBlock>
            </StackPanel>
        </Border>

        <!-- Separator -->
        <Separator Margin="0,10,0,10"/>

        <!-- Fail DockPanel -->
        <DockPanel x:Name="PreviewFailed" Visibility="Collapsed" Height="26">
            <Label x:Name="FailMessage" Content="" Foreground="Red" Margin="-5,0,0,0"/>
        </DockPanel>

        <Grid Margin="10,0,10,0">
            <!-- Define two rows and two columns -->
            <Grid.RowDefinitions>
                <RowDefinition Height="Auto"/>
                <RowDefinition Height="Auto"/>
            </Grid.RowDefinitions>
            <Grid.ColumnDefinitions>
                <ColumnDefinition Width="Auto" MinWidth="136"/>
                <ColumnDefinition/>
            </Grid.ColumnDefinitions>

            <!-- Font Selection -->
            <Label Content="Choose your font:" Grid.Column="0" VerticalAlignment="Center" Margin="-5,0,0,0" Height="25"/>
            <ComboBox x:Name="UiFontFamily" Grid.Row="1" Grid.Column="0" Margin="0,5,0,5" Height="30"/>

            <!-- Font Size -->
            <Label Content="Font Size:" Grid.Row="0" Grid.Column="1" VerticalAlignment="Center" Height="25" Margin="5,0,0,0"/>
            

            <!-- Numeric Up/Down Control -->
            <StackPanel Grid.Row="1" Grid.Column="1" Orientation="Horizontal" Margin="10,5,0,5" VerticalAlignment="Center" Height="30">
                <TextBox x:Name="UiFontSize" Text="2.0" Width="60"
                 VerticalContentAlignment="Center" 
                 HorizontalContentAlignment="Center" />
                 <!-- PreviewTextInput="NumericTextBox"/> -->
                <StackPanel Orientation="Vertical" Margin="5,0,0,0">
                    <Button x:Name="FontSizeUp" FontSize="9" Padding="0" Content="▲" Height="13" Width="30" Margin="0,0,0,2" /> 
                    <!-- Click="FontSizeUp_Click"/> -->
                    <Button x:Name="FontSizeDown" FontSize="9" Padding="0" Content="▼" Height="13" Margin="0,2,0,0" /> 
                    <!-- Click="FontSizeDown_Click"/> -->
                </StackPanel>
            </StackPanel>
        </Grid>

        <!-- Separator -->
        <Separator Margin="0,10,0,5"/>

        <!-- Header3 -->
        <TextBlock Text="Correction Factor"  FontSize="12" FontWeight="Bold" Margin="0,0,0,10"/>
        <Slider x:Name="CorrectionSlider"
                Minimum="-5"
                Maximum="5"
                Value="0"
                TickFrequency="1"
                Width="250"
                Margin="5"/>

        <!-- Separator -->
        <Separator Margin="0,10,0,10"/>

        <!-- Hidden DockPanel -->
        <DockPanel x:Name="SettingsSaved" Visibility="Collapsed">
<!-- <Label x:Name="SavedMessage" Content="Settings successfully saved!" Foreground="Green" FontSize="14" FontWeight="Bold" Height="18"/> -->
            <TextBlock TextAlignment="Center" Foreground="Green" FontSize="14" FontWeight="Bold" Height="18">Settings successfully saved!</TextBlock>
        </DockPanel>

        <!-- Button Grid -->
        <Grid x:Name="CheckboxbuttonsG">
            <Grid.RowDefinitions>
                <RowDefinition Height="Auto" />
            </Grid.RowDefinitions>
            <Grid.ColumnDefinitions>
                <ColumnDefinition Width="*" />
                <ColumnDefinition Width="*" />
                <ColumnDefinition Width="*" />
            </Grid.ColumnDefinitions>
            <Button x:Name="PreviewBtn" Height="25"
                     Grid.Column="0" Grid.Row="0"
                     Content="Preview"
                     Margin="0,10,3,0"/>
                     <!-- Click="preview_btn_click" /> -->
            <Button x:Name="SetBtn" Height="25"
                     Grid.Column="1" Grid.Row="0"
                     Content="Set"
                     Margin="3,10,3,0"/>
                     <!-- Click="set_btn_click" /> -->
            <Button x:Name="CloseBtn" Height="25"
                     Grid.Column="2" Grid.Row="0"
                     Content="Close"
                     Margin="3,10,0,0"/>
                     <!-- Click="close_btn_click"/> -->
        </Grid>

        <!-- Separator -->
        <Separator Margin="0,10,0,10"/>

        <!-- Shortcut Grid --><!--
        <Grid x:Name="setshortcut_g" Height="40">
            <Grid.RowDefinitions>
                <RowDefinition Height="Auto" />
            </Grid.RowDefinitions>
            <Grid.ColumnDefinitions>
                <ColumnDefinition Width="*" />
                <ColumnDefinition Width="*" />
            </Grid.ColumnDefinitions>
            <Button x:Name="add_shortcut_btn" Height="25"
             Grid.Column="0" Grid.Row="0"
             Click="add_shortcut_btn_click" Content="Add shortcut to Revit"
             Margin="0,10,50,0" Grid.ColumnSpan="2"/>
            <TextBox Height="25"
             Grid.Column="1" TextAlignment="Center" Grid.Row="0" Margin="100,10,10,0" Text="VL"/>
        </Grid>-->
    </StackPanel>
</Window>